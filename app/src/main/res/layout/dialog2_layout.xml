<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="320dp"
            android:layout_height="190dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/touxiang2">

            <TextView
                android:id="@+id/dialog2_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="退出提示"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/dialog2_title_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#25b3ff" />

            <TextView
                android:id="@+id/dialog2_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确定退出吗？"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <View
                android:id="@+id/dialog1_view_v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/dialog2_text_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#25b3ff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dialog1_view_v">

                <RelativeLayout
                    android:id="@+id/dialog2_yes_relayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:id="@+id/dialog2_yes_tv"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="帅"
                        android:textColor="#99CCFF"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#25b3ff" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dialog2_no_relayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:id="@+id/dialog2_no_tv"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="不帅"
                        android:textColor="#99CCFF"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
